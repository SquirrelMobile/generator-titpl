<Alloy>
	<Window id="win" layout="vertical">

		<Require id="navbar" src="partials/_navbar" onClick="close" />

		<ScrollView class="container">

			<View left="20" right="20" layout="vertical" height="Ti.UI.SIZE">
				<Require src="/partials/_textfield" class="tfForm" id="lastname" onNext="next" next="firstname"  ></Require>
				<Require src="/partials/_textfield" class="tfForm" id="firstname" onNext="next" next="email" onPrevious="previous" previous="lastname" ></Require>
				<Require src="/partials/_textfield" class="tfForm" id="email" onNext="next" next="phone" onPrevious="previous" previous="firstname" ></Require>
				<Require src="/partials/_textfield" class="tfForm" id="phone" onNext="next" next="password" onPrevious="previous" previous="email" ></Require>
				<Require src="/partials/_textfield" class="tfForm" id="password" onClickLblRight="activePasswordMask" onNext="next" next="passwordConfirm" onPrevious="previous" previous="phone" ></Require>
				<Require src="/partials/_textfield" class="tfForm" id="passwordConfirm"  onNext="submit" onPrevious="previous" previous="password" ></Require>
				<Button class="btn" onClick="submit" />
			</View>


		</ScrollView>
	</Window>
</Alloy>
